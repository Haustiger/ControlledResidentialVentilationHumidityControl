{
  "elements": [
    {
      "type": "NumberSpinner",
      "name": "IndoorSensorCount",
      "caption": "Anzahl Innensensoren",
      "minimum": 1,
      "maximum": 10
    },

    {
      "type": "ExpansionPanel",
      "caption": "Innensensoren",
      "items": [
        { "type": "SelectVariable", "name": "IndoorHumidity1", "caption": "Sensor 1 – rel. Feuchte" },
