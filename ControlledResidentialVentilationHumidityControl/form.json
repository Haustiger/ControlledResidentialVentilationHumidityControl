{
    "elements": [
        {
            "type": "NumberSpinner",
            "name": "SensorCount",
            "caption": "Anzahl Innensensoren (1–10)",
            "minimum": 1,
            "maximum": 10
        },

        {
            "type": "ExpansionPanel",
            "caption": "Innensensoren",
            "items": [
                { "type": "SelectVariable", "name": "HumiditySensor1", "caption": "Feuchte Sensor 1 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor1", "caption": "Temperatur Sensor 1 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor2", "caption": "Feuchte Sensor 2 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor2", "caption": "Temperatur Sensor 2 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor3", "caption": "Feuchte Sensor 3 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor3", "caption": "Temperatur Sensor 3 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor4", "caption": "Feuchte Sensor 4 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor4", "caption": "Temperatur Sensor 4 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor5", "caption": "Feuchte Sensor 5 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor5", "caption": "Temperatur Sensor 5 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor6", "caption": "Feuchte Sensor 6 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor6", "caption": "Temperatur Sensor 6 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor7", "caption": "Feuchte Sensor 7 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor7", "caption": "Temperatur Sensor 7 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor8", "caption": "Feuchte Sensor 8 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor8", "caption": "Temperatur Sensor 8 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor9", "caption": "Feuchte Sensor 9 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor9", "caption": "Temperatur Sensor 9 (°C)" },

                { "type": "SelectVariable", "name": "HumiditySensor10", "caption": "Feuchte Sensor 10 (% rF)" },
                { "type": "SelectVariable", "name": "TemperatureSensor10", "caption": "Temperatur Sensor 10 (°C)" }
            ]
        },

        {
            "type": "ExpansionPanel",
            "caption": "Regelung & Zeitverhalten",
            "items": [
                {
                    "type": "NumberSpinner",
                    "name": "CycleTime",
                    "caption": "Regelzyklus (Minuten)",
                    "minimum": 5,
                    "maximum": 30
                },
                {
                    "type": "NumberSpinner",
                    "name": "HumidityJumpThreshold",
                    "caption": "Feuchtesprung-Schwelle (% rF)",
                    "minimum": 5,
                    "maximum": 30
                }
            ]
        },

        {
            "type": "ExpansionPanel",
            "caption": "Nachtabschaltung (Schallschutz)",
            "items": [
                {
                    "type": "SelectVariable",
                    "name": "NightDisableInput",
                    "caption": "Nachtabschaltung EIN/AUS (BOOL, optional)"
                },

                {
                    "type": "NumberSpinner",
                    "name": "NightOffHour",
                    "caption": "Nachtabschaltung EIN – Stunde",
                    "minimum": 0,
                    "maximum": 23
                },
                {
                    "type": "NumberSpinner",
                    "name": "NightOffMinute",
                    "caption": "Nachtabschaltung EIN – Minute",
                    "minimum": 0,
                    "maximum": 59
                },

                {
                    "type": "NumberSpinner",
                    "name": "NightOnHour",
                    "caption": "Nachtabschaltung AUS – Stunde",
                    "minimum": 0,
                    "maximum": 23
                },
                {
                    "type": "NumberSpinner",
                    "name": "NightOnMinute",
                    "caption": "Nachtabschaltung AUS – Minute",
                    "minimum": 0,
                    "maximum": 59
                }
            ]
        },

        {
            "type": "ExpansionPanel",
            "caption": "Ausgabe & Rückmeldung",
            "items": [
                {
                    "type": "SelectVariable",
                    "name": "TargetPercentVariable",
                    "caption": "Lüftungs-Stellwert Ziel (% – schreibbar)"
                },
                {
                    "type": "SelectVariable",
                    "name": "FeedbackPercentVariable",
                    "caption": "Rückmeldung aktueller Lüftungswert (% – optional)"
                }
            ]
        }
    ],

    "actions": [
        {
            "type": "Button",
            "caption": "Regelung jetzt ausführen",
            "onClick": "CRVHC_Control($id);"
        }
    ]
}
