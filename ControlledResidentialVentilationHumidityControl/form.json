{
  "elements": [
    {
      "type": "Label",
      "caption": "CRV Humidity Control – Version 3.2 Build 6"
    },
    {
      "type": "NumberSpinner",
      "name": "IndoorSensorCount",
      "caption": "Anzahl Innensensoren (1–10)",
      "minimum": 1,
      "maximum": 10
    },
    {
      "type": "ExpansionPanel",
      "caption": "Innensensoren",
      "items": [
        { "type": "SelectVariable", "name": "IndoorHumidity1", "caption": "Innen rF 1" },
        { "type": "SelectVariable", "name": "IndoorTemperature1", "caption": "Innen Temp 1" },
        { "type": "SelectVariable", "name": "IndoorHumidity2", "caption": "Innen rF 2" },
        { "type": "SelectVariable", "name": "IndoorTemperature2", "caption": "Innen Temp 2" },
        { "type": "SelectVariable", "name": "IndoorHumidity3", "caption": "Innen rF 3" },
        { "type": "SelectVariable", "name": "IndoorTemperature3", "caption": "Innen Temp 3" },
        { "type": "SelectVariable", "name": "IndoorHumidity4", "caption": "Innen rF 4" },
        { "type": "SelectVariable", "name": "IndoorTemperature4", "caption": "Innen Temp 4" },
        { "type": "SelectVariable", "name": "IndoorHumidity5", "caption": "Innen rF 5" },
        { "type": "SelectVariable", "name": "IndoorTemperature5", "caption": "Innen Temp 5" },
        { "type": "SelectVariable", "name": "IndoorHumidity6", "caption": "Innen rF 6" },
        { "type": "SelectVariable", "name": "IndoorTemperature6", "caption": "Innen Temp 6" },
        { "type": "SelectVariable", "name": "IndoorHumidity7", "caption": "Innen rF 7" },
        { "type": "SelectVariable", "name": "IndoorTemperature7", "caption": "Innen Temp 7" },
        { "type": "SelectVariable", "name": "IndoorHumidity8", "caption": "Innen rF 8" },
        { "type": "SelectVariable", "name": "IndoorTemperature8", "caption": "Innen Temp 8" },
        { "type": "SelectVariable", "name": "IndoorHumidity9", "caption": "Innen rF 9" },
        { "type": "SelectVariable", "name": "IndoorTemperature9", "caption": "Innen Temp 9" },
        { "type": "SelectVariable", "name": "IndoorHumidity10", "caption": "Innen rF 10" },
        { "type": "SelectVariable", "name": "IndoorTemperature10", "caption": "Innen Temp 10" }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Außensensoren",
      "items": [
        { "type": "SelectVariable", "name": "OutdoorHumidity", "caption": "Außen relative Feuchte" },
        { "type": "SelectVariable", "name": "OutdoorTemperature", "caption": "Außen Temperatur" }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Lüftung",
      "items": [
        {
          "type": "SelectVariable",
          "name": "VentilationSetpointID",
          "caption": "Stellwert Lüftungsstufe (%)"
        }
      ]
    },
    {
      "type": "Button",
      "caption": "Regelung jetzt ausführen",
      "onClick": "IPS_RequestAction($id, 'Run', 1);"
    }
  ]
}
