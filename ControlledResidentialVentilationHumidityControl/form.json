        { "type": "SelectVariable", "name": "IndoorHumidity5", "caption": "Sensor 5 – rel. Feuchte" },
        { "type": "SelectVariable", "name": "IndoorTemperature5", "caption": "Sensor 5 – Temperatur" },

        { "type": "SelectVariable", "name": "IndoorHumidity6", "caption": "Sensor 6 – rel. Feuchte" },
        { "type": "SelectVariable", "name": "IndoorTemperature6", "caption": "Sensor 6 – Temperatur" },

        { "type": "SelectVariable", "name": "IndoorHumidity7", "caption": "Sensor 7 – rel. Feuchte" },
