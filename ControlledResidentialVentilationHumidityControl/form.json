{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Allgemeine Einstellungen",
      "items": [
        {
          "type": "NumberSpinner",
          "name": "CycleMinutes",
          "caption": "Regelintervall (Minuten)",
          "minimum": 5,
          "maximum": 30
        }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Innensensoren",
      "items": [
        {
          "type": "NumberSpinner",
          "name": "IndoorSensorCount",
          "caption": "Anzahl Innensensoren",
          "minimum": 1,
          "maximum": 10
        },

        { "type": "SelectVariable", "name": "IndoorHumidity_1", "caption": "Innen Feuchte 1 (rF %)" },
        { "type": "SelectVariable", "name": "IndoorTemperature_1", "caption": "Innen Temperatur 1 (°C)" },

        { "type": "SelectVariable", "name": "IndoorHumidity_2", "caption": "Innen Feuchte 2 (rF %)" },
        { "type": "SelectVariable", "name": "IndoorTemperature_2", "caption": "Innen Temperatur 2 (°C)" },

        { "type": "SelectVariable", "name": "IndoorHumidity_3", "caption": "Innen Feuchte 3 (rF %)" },
        { "type": "SelectVariable", "name": "IndoorTemperature_3", "caption": "Innen Temperatur 3 (°C)" }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Außensensoren (Sommer / Winter)",
      "items": [
        { "type": "SelectVariable", "name": "OutdoorHumidity", "caption": "Außen Feuchte (rF %)" },
        { "type": "SelectVariable", "name": "OutdoorTemperature", "caption": "Außen Temperatur (°C)" },
        {
          "type": "NumberSpinner",
          "name": "OutsideDeltaThreshold",
          "caption": "Mindestdifferenz absolute Feuchte (g/m³)",
          "minimum": 0.5,
          "maximum": 10,
          "digits": 1
        }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Feuchtesprung",
      "items": [
        {
          "type": "NumberSpinner",
          "name": "HumidityJumpThreshold",
          "caption": "Schwelle Feuchtesprung (g/m³)",
          "minimum": 0.5,
          "maximum": 10,
          "digits": 1
        }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Nachtabschaltung",
      "items": [
        { "type": "SelectVariable", "name": "NightOffSwitch", "caption": "Nachtabschaltung aktiv (Bool)" }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Lüftungssteuerung",
      "items": [
        { "type": "SelectVariable", "name": "VentilationSetpointID", "caption": "Lüftungsstellwert (%)" }
      ]
    }
  ],

  "actions": [
    {
      "type": "Button",
      "caption": "Regelung jetzt ausführen",
      "onClick": "IPS_RequestAction($id, \"ManualRun\", 1);"
    }
  ]
}
