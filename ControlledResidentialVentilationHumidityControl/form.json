{
  "elements": [
    {
      "type": "NumberSpinner",
      "name": "IndoorSensorCount",
      "caption": "Anzahl Innensensoren",
      "minimum": 1,
      "maximum": 10
    },

    {
      "type": "ExpansionPanel",
      "caption": "Innensensoren",
      "items": [
        { "type": "SelectVariable", "name": "IndoorHumidity1", "caption": "Innen 1 – Feuchte" },
        { "type": "SelectVariable", "name": "IndoorTemperature1", "caption": "Innen 1 – Temperatur" },

        { "type": "SelectVariable", "name": "IndoorHumidity2", "caption": "Innen 2 – Feuchte" },
        { "type": "SelectVariable", "name": "IndoorTemperature2", "caption": "Innen 2 – Temperatur" },

        { "type": "SelectVariable", "name": "IndoorHumidity3", "caption": "Innen 3 – Feuchte" },
        { "type": "SelectVariable", "name": "IndoorTemperature3", "caption": "Innen 3 – Temperatur" }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Außensensoren",
      "items": [
        { "type": "SelectVariable", "name": "OutdoorHumidity", "caption": "Außen – Feuchte" },
        { "type": "SelectVariable", "name": "OutdoorTemperature", "caption": "Außen – Temperatur" }
      ]
    },

    {
      "type": "ExpansionPanel",
      "caption": "Lüftung",
      "items": [
        { "type": "SelectVariable", "name": "VentilationSetpointID", "caption": "Stellwert (%)" }
      ]
    },

    {
      "type": "Button",
      "caption": "Regelung jetzt ausführen",
      "onClick": "IPS_RequestAction($id, 'Run', 0);"
    }
  ]
}
